<div class="row">
<div class="col-lg-12">
<h1 class="page-header"><%= t('messages.listing', model: @events.model_name.human(count: @events.count)) %></h1>
</div>
</div>

<table class="table table-dark table-hover">
<thead>
<tr>
<th scope="col"><%= translate_attribute(@events, :name) %></th>
<th scope="col"><%= link_to "Voltar", users_backoffice_welcome_index_path, class:"btn btn-success" %></th>
</tr>
</thead>
<tbody>
<% @events.each do |event| %>
<tr>
<th scope="row"><%= event.name %></th>
<td style="width:100px">
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
<%= link_to "Visualizar", edit_users_backoffice_event_path(event), class:"btn btn-primary" %>

</div>
</td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @events%>


