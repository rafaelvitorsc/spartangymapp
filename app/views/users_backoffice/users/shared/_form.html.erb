<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= "#{action_message} Aluno" %></h1>
    </div>
</div>

<%# if @user.errors.any? %>
<%# end %>

<%= form_with(model: [ :users_backoffice, @user ], local: true) do |form| %>
  <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class:"form-control", placeholder: "Nome do instrutor" %>
    </div>
    <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class:"form-control", placeholder: "Sobrenome do instrutor" %>
    </div>
    <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "Email do instrutor" %>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.text_field :password, class:"form-control", placeholder: "Senha" %>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.text_field :password_confirmation, class:"form-control", placeholder: "Confirmação de Senha" %>
    </div>
    <div id="emailHelp" class="form-text">Não compartilhe suas informações com outra pessoa!</div>
    <button type="submit" class="btn btn-dark">Salvar</button>
<% end %>