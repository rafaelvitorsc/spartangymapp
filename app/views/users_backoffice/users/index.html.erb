<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('messages.listing', model: @users.model_name.human(count: @users.count)) %></h1>
    </div>
</div>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col"><%= translate_attribute(@users, :id) %></th>
      <th scope="col"><%= translate_attribute(@users, :email) %></th>
      <th scope="col"><%= translate_attribute(@users, :first_name) %></th>
      <th scope="col"><%= translate_attribute(@users, :last_name) %></th>
      <th scope="col">
        <%= link_to "Novo", new_users_backoffice_user_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
        <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td style="width:100px">
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <%= link_to "Editar", edit_users_backoffice_user_path(user), class:"btn btn-primary" %>
                    <%= link_to "Excluir", users_backoffice_user_path(user), data: { turbo_method: :delete }, class:"btn btn-danger" %>
                </div>
            </td>
        </tr>
   <% end %>
  </tbody>
</table>

  <%= paginate @users%>

  <%= link_to "Voltar", admins_backoffice_welcome_index_path, class:"nav-link active" %>


