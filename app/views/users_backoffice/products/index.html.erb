<div class="row">
<div class="col-lg-12">
<h1 class="page-header"><%= t('messages.listing', model: @products.model_name.human(count: @products.count)) %></h1>
</div>
</div>

<table class="table table-dark table-hover">
<thead>
<tr>
<th scope="col"><%= translate_attribute(@products, :id) %></th>
<th scope="col"><%= translate_attribute(@products, :name) %></th>
<th scope="col"><%= translate_attribute(@products, :description) %></th>

<th scope="col">
<%= link_to "Voltar", users_backoffice_welcome_index_path, class:"btn btn-success" %>

</th>
</tr>
</thead>
<tbody>
<% @products.each do |product| %>
<tr>
<th scope="row"><%= product.id %></th>
<td><%= product.name %></td>
<td><%= product.description %></td>

<td style="width:100px">
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
<%= link_to "Visualizar", edit_users_backoffice_product_path(product), class:"btn btn-primary" %>

</div>
</td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @products%>


