<div class="row">
<div class="col-lg-12">
<h1 class="page-header"><%= "Listando Pagamentos" %></h1>
</div>
</div>

<table class="table table-dark table-hover">
<thead>
<tr>
<th scope="col"><%= translate_attribute(@payments, :data) %></th>
<th scope="col"><%= translate_attribute(@payments, :value) %></th>
<th scope="col"><%= translate_attribute(@payments, :tipo) %></th>


<th scope="col">
<%= link_to "Voltar", users_backoffice_welcome_index_path, class:"btn btn-success" %>

</th>
</tr>
</thead>
<tbody>
<% @payments.each do |payment| %>
<tr>
<th scope="row"><%= payment.data %></th>
<td><%= payment.value %></td>
<td><%= payment.tipo %></td>

<td style="width:100px">
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
<%= link_to "Contestar Pagamento", edit_users_backoffice_payment_path(payment), class:"btn btn-danger" %>

</div>
</td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @payments%>


