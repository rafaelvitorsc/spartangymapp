<div class="row">
<div class="col-lg-12">
<h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: @questions.count)) %></h1>
</div>
</div>

<table class="table table-dark table-hover">
<thead>
<tr>
<th scope="col"><%= translate_attribute(@questions, :id) %></th>
<th scope="col"><%= translate_attribute(@questions, :description) %></th>
<th scope="col"><%= translate_attribute(@questions, :subject) %></th>
<th scope="col">
<%= link_to "Novo", new_admins_backoffice_question_path, class:"btn btn-success" %>
</th>
</tr>
</thead>
<tbody>
<% @questions.each do |question| %>
<tr>
<th scope="row"><%= question.id %></th>
<td><%= question.description.truncate(50) %></td>
<td><%= question.subject.description.truncate(30) %></td>
<td style="width:100px">
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
<%= link_to "Editar", edit_admins_backoffice_question_path(question), class:"btn btn-primary" %>
<%= link_to "Excluir", admins_backoffice_question_path(question), data: { turbo_method: :delete }, class:"btn btn-danger" %>
</div>
</td>
</tr>
<% end %>
</tbody>
</table>

<%= paginate @questions%>

