    <div class="col-lg-12">
        <h1 class="page-header"><%= "#{action_message} Instrutor" %></h1>
    </div>
</div>

<%# if @admin.errors.any? %>
<%# end %>

<%= form_with(model: [ :admins_backoffice, @admin ], local: true) do |form| %>
    <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class:"form-control", placeholder: "Email do instrutor" %>
    <div id="emailHelp" class="form-text">Não compartilhe suas informações com outra pessoa!</div>
    </div>
    <div class="form-group">
        <%= form.label :password %>
        <%= form.text_field :password, class:"form-control", placeholder: "Senha" %>
    </div>
    <div class="form-group">
        <%= form.label :password_confirmation %>
        <%= form.text_field :password_confirmation, class:"form-control", placeholder: "Confirmação de Senha" %>
    </div>
    <button type="submit" class="btn btn-dark">Salvar</button>
<% end %>