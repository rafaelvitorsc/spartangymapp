<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header"><%= t('messages.listing', model: @admins.model_name.human(count: @admins.count)) %></h1>
    </div>
</div>

<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th scope="col"><%= translate_attribute(@admins, :id) %></th>
      <th scope="col"><%= translate_attribute(@admins, :email) %></th>
      <th scope="col">
        <%= link_to "Novo", new_admins_backoffice_admin_path, class:"btn btn-success" %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |admin| %>
        <tr>
            <th scope="row"><%= admin.id %></th>
            <td><%= admin.email %></td>
            <td style="width:100px">
                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                    <%= link_to "Editar", edit_admins_backoffice_admin_path(admin), class:"btn btn-primary" %>
                    <%= link_to "Excluir", admins_backoffice_admin_path(admin), data: { turbo_method: :delete }, class:"btn btn-danger" %>
                </div>
            </td>
        </tr>
   <% end %>
  </tbody>
</table>

  <%= paginate @admins%>

